#!/usr/bin/env bash

# Stolen from here:
# https://wiki.archlinux.org/index.php/Bash/Functions#Extract

# Check input
file="$1"
if [[ -z "$file" ]]; then
	echo "Usage: $(basename "$0") <file>"
	exit 2
fi
if [[ ! -f "$file" ]]; then
	echo "File not found: '$file'" >&2
	exit 2
fi

if is-macos; then
	tar=bsdtar
else
	tar=tar
fi

# Find command
cmd=''
case $file in
	# TODO: Fix this giant mess
	#*.t@(gz|lz|xz|b@(2|z?(2))|a@(z|r?(.@(Z|bz?(2)|gz|lzma|xz)))))
	*.7z)  cmd=(7z x);;
	*.bz2) cmd=(bunzip2);;
	*.exe) cmd=(cabextract);;
	*.gpg) cmd=(gpg);;
	*.gz)  cmd=(gunzip);;
	*.rar) cmd=(unrar x);;
	*.tar) cmd=(untar);;
	*.tgz) cmd=($tar xf);;
	*.xz)  cmd=(unxz);;
	*.Z)   cmd=(uncompress);;
	*.zip) cmd=(unzip);;
	*)
		echo "Unrecognized file extension: \`$file'" >&2
		exit 2;;
esac

# Extract
print-cmd "${cmd[@]}" "$file"
exec "${cmd[@]}" "$file"

