#!/usr/bin/env bash
theme="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/theme"
color="0xff$("$theme" lavender)"

icon='Û∞É≠'
#icon='‚è±Ô∏è'
#icon='üï∞Ô∏è'
#icon='‚åöÔ∏è'
label="$(date +'%H:%M:%S')"

args=()
