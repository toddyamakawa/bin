#!/usr/bin/env bash
theme="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/theme"
color="0xff$("$theme" lavender)"

icon='ó°ƒ­'
label="$(date +'%a %b %d')"

args=()
args+=(--set "${NAME:-cal}")
args+=(update_freq=15)
args+=(icon="$icon" icon.color="$color")
