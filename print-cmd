#!/usr/bin/env bash
prompt='Â»'
#prompt='$'

printf "\e[34;1m%s\e[0m " "$prompt"

for arg in "$@"; do
	clean_arg="$(printf '%q' "$arg")"
	if [[ "$arg" == "$clean_arg" ]]; then
		echo -n "$arg "
		continue
	fi

	if [[ $arg != *"'"* ]]; then
		clean_arg="'$arg'"
	elif [[ $arg != *'"'* ]]; then
		clean_arg="\"$arg\""
	fi
	echo -n "$clean_arg "
done
echo

