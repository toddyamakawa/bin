#!/usr/bin/env bash
if (bat --help &>/dev/null); then
	exec bat "$@"
fi
if [[ -f "$@" ]]; then
	printf '────────────────────────────────────────────────────────────────────────────────\n'
	printf "     File: \e[1m$@\e[0m\n"
	printf '────────────────────────────────────────────────────────────────────────────────\n'
fi
cat -n "$@"

